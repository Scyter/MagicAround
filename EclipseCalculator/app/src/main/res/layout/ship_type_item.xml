<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_ship_type_item"
    android:layout_width="@dimen/ship_type_item_size"
    android:layout_height="@dimen/ship_type_item_size"
    android:layout_margin="@dimen/ship_type_item_padding"
    android:background="@drawable/background_dialog">

    <ImageView
        android:id="@+id/image_ship_type"
        android:layout_width="@dimen/ship_type_item_size"
        android:layout_height="@dimen/ship_type_item_size"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textAllCaps="true"
        android:textSize="@dimen/ship_type_text_size"
        android:text="Large Text"
        android:id="@+id/text_ship_type"/>


</RelativeLayout>