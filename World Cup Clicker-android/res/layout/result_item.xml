<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tvPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_hor_small_margin"
        android:text="66"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/activity_hor_small_margin"
        android:layout_toRightOf="@id/tvPlace" >

        <ImageView
            android:id="@+id/ivTeam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_hor_small_margin"
            android:contentDescription="image_item_local"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/ivContry"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/click_ico" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_hor_small_margin"
        android:layout_marginRight="65dp"
        android:layout_marginTop="@dimen/activity_ver_small_margin"
        android:layout_toRightOf="@id/rl"
        android:text="Соединенные штаты америки"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/tvTeam"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_hor_small_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="999,9M"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>